<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images8"
    tools:context=".AddTestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SubjectName"
            android:text="Subject Name"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp"
            android:textSize="34sp"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/StudentNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No. Of Students"
            android:inputType="number"
            android:textColorHint="@android:color/white"
            android:textSize="24sp"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="10"
            app:met_primaryColor="@android:color/white"
            app:met_singleLineEllipsis="true" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/examYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:hint="Exam Year"
            android:inputType="number"
            android:maxLength="4"
            android:textColorHint="@android:color/white"
            android:textSize="24sp"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@android:color/white"
            app:met_singleLineEllipsis="true"  />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/exam_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:textSize="15sp"
            android:layout_marginEnd="3dp"
            android:hint="Choose No of Question"
            app:met_textColorHint="@color/colorPrimary"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/exam_choices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:textSize="15sp"
            android:layout_marginEnd="3dp"
            android:hint="No of Available options"
            app:met_textColorHint="@color/colorPrimary"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/exam_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:textSize="15sp"
            android:layout_marginEnd="3dp"
            android:hint="Choose Exam Type"
            app:met_textColorHint="@color/colorPrimary"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/btnAnswer"
            android:background="@drawable/my_button_bg2"
            android:text="Add Answer"
            android:layout_margin="8dp"
            android:textColor="@android:color/white" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/btnScan"
            android:background="@drawable/my_button_bg2"
            android:text="Scan"
            android:layout_margin="8dp"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>