<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SubjectName"
            android:text="Subject Name"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/StudentNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:hint="No. Of Students"
            android:inputType="number"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            app:met_baseColor="@color/colorPrimary"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/colorPrimary"
            app:met_singleLineEllipsis="true"
            app:met_textColorHint="@color/colorPrimary" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/examYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:hint="examYear"
            android:inputType="number"
            android:maxLength="4"

            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            app:met_baseColor="@color/colorPrimary"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/colorPrimary"
            app:met_singleLineEllipsis="true"
            app:met_textColorHint="@color/colorPrimary" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/exam_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:textSize="15sp"
            android:layout_marginEnd="3dp"
            android:hint="Choose Exam Type"
            app:met_textColorHint="@color/colorPrimary"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtQuesNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total No. Question"
            android:layout_margin="3dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:inputType="number"
            app:met_baseColor="@color/colorPrimary"
            app:met_textColorHint="@color/colorPrimary"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/colorPrimary"
            app:met_singleLineEllipsis="true" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Answer"
            android:layout_margin="3dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            app:met_baseColor="@color/colorPrimary"
            app:met_textColorHint="@color/colorPrimary"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/colorPrimary"
            app:met_singleLineEllipsis="true" />


    </LinearLayout>
</android.support.v7.widget.CardView>